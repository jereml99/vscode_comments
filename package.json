{
  "name": "git-review-comments",
  "publisher": "me",
  "displayName": "Git Review Comments",
  "description": "Inline review comments stored in the repo",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "resources/icon.png",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "review-comments",
          "title": "Review Comments",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "review-comments": [
        {
          "id": "review-comments-sidebar",
          "name": "Threads"
        }
      ]
    },
    "commands": [
      {
        "command": "reviewComments.addThread",
        "title": "Add Review Comment",
        "icon": "$(add)"
      },
      {
        "command": "reviewComments.replyThread",
        "title": "Reply to Comment"
      },
      {
        "command": "reviewComments.resolveThread",
        "title": "Resolve Thread"
      },
      {
        "command": "reviewComments.reopenThread",
        "title": "Reopen Thread"
      },
      {
        "command": "reviewComments.reattachThread",
        "title": "Reattach Review Comment"
      },
      {
        "command": "reviewComments.deleteThread",
        "title": "Delete Thread"
      },
      {
        "command": "reviewComments.refreshThreads",
        "title": "Refresh Threads",
        "icon": "$(refresh)"
      },
      {
        "command": "reviewComments.deleteMessage",
        "title": "Delete Comment"
      },
      {
        "command": "reviewComments.editMessage",
        "title": "Edit Comment"
      }
    ],
    "keybindings": [
      {
        "command": "reviewComments.addThread",
        "key": "ctrl+alt+c",
        "mac": "cmd+alt+c",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "reviewComments.addThread",
          "when": "editorHasSelection",
          "group": "navigation"
        },
        {
          "command": "reviewComments.reattachThread",
          "when": "editorHasSelection",
          "group": "modification"
        }
      ],
      "view/title": [
        {
          "command": "reviewComments.refreshThreads",
          "when": "view == review-comments-sidebar",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "reviewComments.replyThread",
          "when": "view == review-comments-sidebar",
          "group": "inline"
        },
        {
          "command": "reviewComments.resolveThread",
          "when": "view == review-comments-sidebar && viewItem == thread-open",
          "group": "inline"
        },
        {
          "command": "reviewComments.reopenThread",
          "when": "view == review-comments-sidebar && viewItem == thread-resolved",
          "group": "inline"
        },
        {
          "command": "reviewComments.deleteThread",
          "when": "view == review-comments-sidebar && (viewItem == thread-open || viewItem == thread-resolved)",
          "group": "modification"
        },
        {
          "command": "reviewComments.editMessage",
          "when": "view == review-comments-sidebar && viewItem == message",
          "group": "modification"
        },
        {
          "command": "reviewComments.deleteMessage",
          "when": "view == review-comments-sidebar && viewItem == message",
          "group": "modification"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/sinon": "^21.0.0",
    "@types/uuid": "^9.0.8",
    "@types/vscode": "^1.90.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "sinon": "^21.0.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "dependencies": {
    "uuid": "^9.0.1"
  }
}